    {
      "name": "GraphQL",
      "item": [
        {
          "name": "GraphQL - createRecipe",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status is 200', function () {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "const body = pm.response.json();",
                  "pm.test('No GraphQL errors', function () {",
                  "  pm.expect(body.errors).to.be.undefined;",
                  "});",
                  "const created = body?.data?.createRecipe;",
                  "if (created?.id) {",
                  "  pm.collectionVariables.set('graphqlRecipeId', String(created.id));",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"query\": \"mutation Create($title: String!, $description: String) { createRecipe(title: $title, description: $description) { id title description createdAt } }\",\n  \"variables\": {\n    \"title\": \"Cake\",\n    \"description\": \"Chocolate\"\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/graphql",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "graphql"
              ]
            }
          }
        },
